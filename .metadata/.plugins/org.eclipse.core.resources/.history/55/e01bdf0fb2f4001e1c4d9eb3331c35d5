package com.karthicvel.student.dal.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.karthicvel.student.dal.entities.Student;
import com.karthicvel.student.dal.repos.StudentRepository;

@RestController
@RequestMapping("/createStudent")
public class StudentRESTController {
	
	
	@Autowired
	private StudentRepository studentRepository;
	
	
	public Student createStudent() {
		Student student = new Student();
		student.setName("Demo");
		student.setCourse("Spring boot");
		student.setFee(880.0);
		studentRepository.save(student);
	}

}
